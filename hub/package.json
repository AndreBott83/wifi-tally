{
  "name": "wifi-tally-hub",
  "license": "MIT",
  "version": "0.1.0",
  "homepage": "https://wifi-tally.github.io/",
  "repository": {
    "type": "git",
    "url": "https://github.com/wifi-tally/wifi-tally"
  },
  "bin": "server.js",
  "dependencies": {
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "atem-connection": "^2.0.0",
    "express": "^4.15.2",
    "lato-font": "^3.0.0",
    "next": "^9.5.5",
    "obs-websocket-js": "^4.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "xml2js": "^0.4.23",
    "yargs": "^15.4.1"
  },
  "scripts": {
    "dev": "ts-node --project tsconfig.server.json server.ts --env=development --trace-warnings",
    "build:client": "next build",
    "build:server": "tsc --project tsconfig.server.json",
    "start": "node server.js --env=production",
    "test": "jest --watch --runInBand --detectOpenHandles",
    "test:ci": "jest --ci --detectOpenHandles"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "testMatch": [
      "**/*.spec.(js|ts|tsx)"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "devDependencies": {
    "@testing-library/dom": "^7.27.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^9.5.0",
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.9",
    "@types/react": "^16.14.0",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.34",
    "@types/tmp": "^0.2.0",
    "@types/xml2js": "^0.4.7",
    "babel-jest": "^25.5.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.5.4",
    "jest-dom": "^4.0.0",
    "react-test-renderer": "^16.13.1",
    "tmp": "^0.2.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2",
    "ws": "^7.4.0"
  }
}
